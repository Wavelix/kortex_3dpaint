<launch>
  <!-- 机器人命名空间；留空则在根命名空间 -->
  <arg name="robot_ns" default="my_gen3_lite" />

  <!-- ros_control joint trajectory controller -->
  <node pkg="controller_manager"
        type="spawner"
        name="controller_spawner"
        ns="$(arg robot_ns)"
        args="gen3_lite_joint_trajectory_controller"
        respawn="false"
        output="screen" />

  <!-- 绘图（圆轨迹）节点 -->
  <node pkg="kortex_3dpaint"
        type="paint_fixed_surface.py"
        name="paint_node"
        ns="$(arg robot_ns)"
        respawn="false"
        output="screen" />
</launch>
